{
  "name": "hnhdigital-os/laravel-twilio",
  "description": "Provides Twilio services in Laravel.",
  "keywords": ["laravel","twilio"],
  "license": "MIT",
  "authors": [
    {
     "name": "Rocco Howard",
     "email": "rocco@bluora.com.au"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "twilio/sdk": "^5.7"
  },
  "require-dev": {
    "codeclimate/php-test-reporter": "dev-master",
    "mockery/mockery": "0.9.*",
    "phpmd/phpmd" : "@stable",
    "phpunit/phpunit": "5.*",
    "squizlabs/php_codesniffer": "^2.0"
  },
  "autoload": {
    "psr-4": {
        "Bluora\\LaravelTwilio\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
        "Bluora\\LaravelTwilio\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "composer phpunit && composer phpcs",
    "phpcs": "./vendor/bin/phpcs -p -s --standard=PSR2 ./src ./tests",
    "phpunit": "phpunit",
    "hhvm": "hhvm ./vendor/phpunit/phpunit/phpunit"
  }
}
